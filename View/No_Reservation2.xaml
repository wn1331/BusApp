        <DatePicker x:Name="theDatePicker"  HorizontalAlignment="Left" Height="34" Margin="488,31,0,0" VerticalAlignment="Top" Width="143" FontSize="18" DisplayDateStart="{Binding Mode=OneWay, Source={x:Static
